@model IEnumerable<HospitalManagment.Models.department>

@{
    ViewData["Title"] = "Departmen Admin Panel";
}

<div class="container">
    <header class="d-flex justify-content-center py-3">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link " asp-area="" asp-controller="users" asp-action="Index">User Admin Panel</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="doctors" asp-action="Index">Doctor Admin Panel</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="departments" asp-action="Index">Departmen Admin Panel</a>
            </li>
        </ul>
    </header>
</div>
<h1>Departmen Admin Panel</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorsName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorsName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
