@model IEnumerable<HospitalManagment.Models.doctors>



  <body class="bg-dark">


    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 g-2 mx-3">
    @foreach(var item in Model)
    {
      

            
                <div class="col mt-5">
                    <div class="card shadow-sm" style="background-color:gray">
                            <img class="bd-placeholder-img card-img-top" width="100%" height="455" src="@Html.DisplayFor(modelItem=>item.Image)" />
                            <div class="card-body" style="background-color:gray;color:#191717">
                                <h1 class="align-items-center text-center">
                                    @Html.DisplayFor(modelItem => item.name)
                                </h1>
                                <h3 class="text-center">
                                    @Html.DisplayFor(modelItem => item.age) Age
                                </h3>
                            <p class="card-text display-5">@Html.DisplayFor(modelItem=>item.Description)</p>
                        </div>
                    </div>
                </div>
           
        

    } 
    </div>
        </div>
    </div>
</body>