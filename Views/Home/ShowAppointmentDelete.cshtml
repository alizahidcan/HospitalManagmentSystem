@model HospitalManagment.Models.appointment

@{
    ViewData["Title"] = "Delete";
}
<body class="bg-dark text-white">

<h3 class="mt-5">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.justDate)
        </dd>
        <dt class="col-sm-2">
Time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.time)
        </dd>
        <dt class="col-sm-2">
Your Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.userName)
        </dd>
        <dt class="col-sm-2">
Doctors Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.doctors.name)
        </dd>
        <dt class="col-sm-2">
Departments Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.department.Name)
        </dd>
    </dl>

    <form asp-action="ShowAppointmentDelete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="showAppointment">Back to List</a>
    </form>
</div>
</body>