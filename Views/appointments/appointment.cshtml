@model HospitalManagment.Models.appointment

@{
    ViewData["Title"] = "Make an Appointment";
}
<div class="w-50 m-auto">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="justDate" class="control-label"></label>
                <input type="date" asp-for="justDate" class="form-control" />
                <span asp-validation-for="justDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="time" class="control-label"></label>
                <input type="time" asp-for="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userId" class="control-label"></label>
                <select asp-for="userId" class="form-control" asp-items="ViewBag.userId"></select>
            </div>
            <div class="form-group">
                <label asp-for="doctorId" class="control-label"></label>
                <select asp-for="doctorId" class="form-control" asp-items="ViewBag.doctorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="departmentId" class="control-label"></label>
                <select asp-for="departmentId" class="form-control" asp-items="ViewBag.departmentId"></select>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
