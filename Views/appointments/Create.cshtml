@model HospitalManagment.Models.appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>appointment</h4>
<hr />
<div class="w-50 m-auto">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
